<?xml version="1.0" ?>

<robot name="floating_planar_4dof_manipulator">

  <!-- Colors -->
  <material name="Grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="Orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="Blue">
  <color rgba="0.5 0.7 1.0 1.0"/>      
  </material>
  <material name="Red">
    <color rgba="1 0 0 1.0"/>      
  </material>

  <!--Spacecraft-->
  <link name="Chaser_Base">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="300.0"/> <!-- Updated mass to 300 kg -->
      <!-- Updated inertia for a 0.25x0.25x0 planar square -->
      <inertia ixx="1.5624" ixy="0" ixz="0" iyy="1.5624" iyz="0" izz="3.1248"/>
    </inertial>
    <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
            <box size="0.5 0.5 0"/> <!-- Updated size to 50cm side -->
        </geometry>
        <material name="Grey"/>
    </visual>
    <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
            <box size="0.5 0.5 0"/> <!-- Updated size to 50cm side -->
        </geometry>
    </collision>
  </link>

  <!--Manipulator-->

  <!-- Joint 1 -->
  <joint name="Joint_1" type="revolute">
    <parent link="Chaser_Base"/>
    <child link="Link_1"/>
    <origin rpy="0 0 0" xyz="0.25 0 0"/> <!-- Moved origin to the right edge of the base -->
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="1000.0" velocity="100.0"/>
  </joint>
  
  <!-- Link 1 -->
  <link name="Link_1">
    <inertial>
      <origin rpy="0 0 0" xyz="0.25 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.1073" ixy="0" ixz="0" iyy="0.1073" iyz="0" izz="0.0063"/>
    </inertial>
    <visual>
      <origin rpy="0 1.570796 0" xyz="0.25 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin rpy="0 1.570796 0" xyz="0.25 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 2 -->
  <joint name="Joint_2" type="revolute">
    <parent link="Link_1"/>
    <child link="Link_2"/>
    <origin rpy="0 0 0" xyz="0.5 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="1000.0" velocity="100.0"/>
  </joint>

  <!-- Link 2 -->
  <link name="Link_2">
    <inertial>
      <origin rpy="0 0 0" xyz="0.25 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.1073" ixy="0" ixz="0" iyy="0.1073" iyz="0" izz="0.0063"/>
    </inertial>
    <visual>
      <origin rpy="0 1.570796 0" xyz="0.25 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin rpy="0 1.570796 0" xyz="0.25 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 3 -->
  <joint name="Joint_3" type="revolute">
    <parent link="Link_2"/>
    <child link="Link_3"/>
    <origin rpy="0 0 0" xyz="0.5 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="1000.0" velocity="100.0"/>
  </joint>

  <!-- Link 3 -->
  <link name="Link_3">
    <inertial>
      <origin rpy="0 0 0" xyz="0.25 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.1073" ixy="0" ixz="0" iyy="0.1073" iyz="0" izz="0.0063"/>
    </inertial>
    <visual>
      <origin rpy="0 1.570796 0" xyz="0.25 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin rpy="0 1.570796 0" xyz="0.25 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 4 -->
  <joint name="Joint_4" type="revolute">
    <parent link="Link_3"/>
    <child link="Link_4"/>
    <origin rpy="0 0 0" xyz="0.5 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14159" upper="3.14159" effort="1000.0" velocity="100.0"/>
  </joint>

  <!-- Link 4 -->
  <link name="Link_4">
    <inertial>
      <origin rpy="0 0 0" xyz="0.25 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.1073" ixy="0" ixz="0" iyy="0.1073" iyz="0" izz="0.0063"/>
    </inertial>
    <visual>
      <origin rpy="0 1.570796 0" xyz="0.25 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <collision>
      <origin rpy="0 1.570796 0" xyz="0.25 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 5: Fixed joint for end-effector -->
  <joint name="Joint_5_EE" type="fixed">
    <parent link="Link_4"/>
    <child link="EndEffector"/>
    <origin rpy="0 0 0" xyz="0.5 0 0"/>
  </joint>

  <!-- End-Effector Link -->
  <link name="EndEffector">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="Red"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
  </link>
  
</robot>
